<Window x:Class="Cole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cole"
        mc:Ignorable="d"
        Title="Cole - OoT Actor Lookup" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="mainGrid" Margin="0,0,0,0">
        <Grid x:Name="searchGrid" Margin="0,0,492,130">
            <GroupBox Header="Search Actor" Margin="9,5,0,0">
                <Label x:Name="foundLabel" Content="Found: 0" Margin="0,0,187,0" VerticalAlignment="Bottom" Height="25"/>
            </GroupBox>
            <ComboBox x:Name="categoryBox" Margin="47,0,54,32" VerticalAlignment="Bottom" Height="21" SelectedIndex="0" SelectionChanged="categoryBox_SelectionChanged"/>
            <ListBox x:Name="actorListBox"  Margin="47,52,54,58" SelectionChanged="listBox_SelectionChanged"/>
            <TextBox x:Name="actorSearchBox" Margin="47,27,54,0" TextWrapping="Wrap" MaxLines="1" Tag="" TextChanged="actorSearchBox_TextChanged" Height="20" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
